# Maintainer: 吕海涛 <aur@lvht.net>

pkgname=php-ev
_extname=ev
pkgver=1.0.0
pkgrel=1
pkgdesc="Provides interface to libevent library"
arch=("i686" "x86_64")
url="https://bitbucket.org/osmanov/pecl-ev"
license=('PHP')
depends=('php')
source=("git+https://bitbucket.org/osmanov/pecl-ev")
backup=("etc/php/conf.d/$_extname.ini")
packager="Vladimir Fedorov <fedotru@gmail.com>"

build() {
	cd "$srcdir/pecl-ev"
	phpize
	./configure
	make
}

package() {
	cd "$srcdir/pecl-ev"
	install -m0755 -d "$pkgdir/etc/php/conf.d/"
	install -m0644 -D "LICENSE" "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
	echo "extension=$_extname.so" > "$pkgdir/etc/php/conf.d/$_extname.ini"
	chmod 0644 "$pkgdir/etc/php/conf.d/$_extname.ini"
	install -m0755 -D "./modules/$_extname.so" "$pkgdir$(php-config --extension-dir)/$_extname.so"
}

sha256sums=('SKIP')

